{{ header }}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            {{ column_left }}
        </div>
        <div class="col-md-9">
            <h1>{{ heading_title }}</h1>
            <a href="{{ add_url }}" class="btn btn-primary">Добавить клиента</a>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Имя клиента</th>
                        <th>Client Secret</th>
                        <th>Статус</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    {% for client in clients %}
                    <tr>
                        <td>{{ client.client_id }}</td>
                        <td>{{ client.client_name }}</td>
                        <td>{{ client.client_secret }}</td>
                        <td>{{ client.status ? 'Активен' : 'Неактивен' }}</td>
                        <td>
                            <a href="{{ delete_url }}&client_id={{ client.client_id }}" class="btn btn-danger">Удалить</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{ footer }}