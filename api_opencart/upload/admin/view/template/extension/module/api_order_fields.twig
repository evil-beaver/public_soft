{{ header }}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            {{ column_left }}
        </div>
        <div class="col-md-9">
            <h1>{{ heading_title }}</h1>
            <a href="{{ add_url }}" class="btn btn-primary">Добавить поле</a>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Название поля</th>
                        <th>Обязательное</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    {% for field in fields %}
                    <tr>
                        <td>{{ field.field_id }}</td>
                        <td>{{ field.field_name }}</td>
                        <td>{{ field.is_required ? 'Да' : 'Нет' }}</td>
                        <td>
                            <a href="{{ delete_url }}&field_id={{ field.field_id }}" class="btn btn-danger">Удалить</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{ footer }}